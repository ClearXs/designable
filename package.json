{
  "name": "root",
  "private": true,
  "devEngines": {
    "node": "20.x"
  },
  "workspaces": [
    "packages/*",
    "formily/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "build": "rimraf -rf packages/*/{dist,lib,esm} && rimraf -rf formily/*/{dist,lib,esm} && pnpm run build:packages && pnpm run build:formily",
    "build:packages": "pnpm run build:shared && pnpm run build:core && pnpm run build:react && pnpm run build:react-sandbox && pnpm run build:react-settings-form",
    "build:formily": "pnpm run build:setters && pnpm run build:transformer && pnpm run build:semi",
    "build:shared": "pnpm -C packages/shared run build",
    "build:core": "pnpm -C packages/core run build",
    "build:react": "pnpm -C packages/react run build",
    "build:react-sandbox": "pnpm -C packages/react-sandbox run build",
    "build:react-settings-form": "pnpm -C packages/react-settings-form run build",
    "build:semi": "pnpm -C formily/semi run build",
    "build:setters": "pnpm -C formily/setters run build",
    "build:transformer": "pnpm -C formily/transformer run build",
    "build:docs": "dumi build",
    "start:semi": "pnpm -C formily/semi run start",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:prod": "jest --coverage --silent",
    "preversion": "npm run build && npm run lint",
    "publish": "pnpm publish -r --no-git-checks --access public",
    "lint": "eslint --ext .ts,.tsx,.js  --fix"
  },
  "resolutions": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "yargs": "^16.x"
  },
